<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mifta.Miftah_1202150069_Modul1.MainActivity">

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="498dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Makan Malam"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066" />

        <TextView
            android:id="@+id/resto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dengan Milea"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="74dp" />

        <EditText
            android:id="@+id/makanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="151dp" />

        <EditText
            android:id="@+id/porsi1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="232dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/abnormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Abnormal"
                tools:layout_editor_absoluteX="225dp"
                tools:layout_editor_absoluteY="322dp"
                android:onClick="abnormal"
                />


            <Button
                android:id="@+id/eatboss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eatbus"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="322dp"
                android:onClick="eatbus"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
